# Default user ID (can be empty or set by client on first visit)
DEFAULT_USER_ID=

# Your default location for weather-related features
LOCATION=your-home-location

# Free Opeather API Key from OpenWeather (https://openweathermap.org/api) - Make sure you set limits to keep from exceeding free tier
WEATHER_API_KEY=your-openweather-api-key

# Free geocoding API Key from OpenCage (https://opencagedata.com/)
GEOCODE_API_KEY=your-opencage-api-key

# OpenAI API Key (https://platform.openai.com/account/api-keys) - Requires paid account
OPENAI_API_KEY=your-openai-api-key

# OpenAI model name (example: gpt-4o, gpt-4o-mini, gpt-3.5-turbo)
OPENAI_MODEL=gpt-4o-mini

# Ollama model tag (example: llama3:8b)
OLLAMA_MODEL=llama3:8b

# Optional: Used for personalization
FAMILY_NAME=your-family-name